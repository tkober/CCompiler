%{

#include <stdio.h>

#import "CCParser.h"
#import "CCScanner.h"


id<CCOutput> _output;

%}

%token NUMBER
%token ADD SUB MUL DIV ABSOLUTE
%token OB CB
%token EOL


%%


arithmetic_expression: /* nothing */
| arithmetic_expression expr EOL { [_output printResult:@"valid\n"]; }
;

expr: NUMBER
| expr op expr
| OB expr CB
;

op: ADD
| SUB
| MUL
| DIV
| ABSOLUTE
;


%%


void start_scanning(const char *input, id<CCOutput> output)
{
    _output = output;
    YY_BUFFER_STATE buffer=yy_scan_string(input);
    yyparse();
    yy_delete_buffer(buffer);
}


int yyerror(char *s)
{
    [_output printError:[NSString stringWithFormat:@"error: %s\n", s]];
    return 0;
}